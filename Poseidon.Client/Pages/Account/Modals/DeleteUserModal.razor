<div class="container" style="width: 25rem;">
    <hr style="background-color: black; margin-top: 0;"/>
    <div class="row">
        <div class="col">
            <h5>@Message</h5>

            @if (ShowErrors)
            {
                <ul class="list-group my-4">
                    @foreach (string error in Errors)
                    {
                        <li class="list-group-item list-group-item-danger">@error</li>
                    }
                </ul>
            }
        </div>
    </div>

    <hr style="background-color: black;" class="mt-3"/>

    <div class="row mt-4">
        <div class="col mx-5 d-flex justify-content-between">
            <button class="btn btn-danger" @onclick="HandleDeleteUserAsync">
                <i class="bi bi-check-circle"></i> Confirm
            </button>

            <button class="btn btn-primary" @onclick="ModalInstance.CancelAsync">
                <i class="bi bi-x-circle"></i> Cancel
            </button>
        </div>
    </div>
</div>