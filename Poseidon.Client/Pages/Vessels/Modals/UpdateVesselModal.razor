<EditForm Model="VesselModel" OnValidSubmit="HandleUpdateVesselAsync" style="width: 35rem;">
    <hr style="background-color: black;" class="mt-0"/>

    <div>
        <p class="lead">
            <small>Please update vessel details.</small>
        </p>

        @if (ShowErrors)
        {
            <ul class="list-group my-4">
                @foreach (string error in Errors)
                {
                    <li class="list-group-item list-group-item-danger">@error</li>
                }
            </ul>
        }

        <div class="form-floating mb-3">
            <InputText class="form-control" placeholder="MMSI" @bind-Value="VesselModel.Mmsi"/>
            <label>MMSI</label>
        </div>

        <div class="form-floating mb-3">
            <InputText class="form-control" placeholder="Name" @bind-Value="VesselModel.Name"/>
            <label>Name</label>
        </div>

        <div class="form-floating mb-3">
            <InputText class="form-control" placeholder="Callsign" @bind-Value="VesselModel.Callsign"/>
            <label>Callsign</label>
        </div>
        
        <div class="form-floating mb-3">
            <InputText class="form-control" placeholder="Flag" @bind-Value="VesselModel.Flag"/>
            <label>Flag</label>
        </div>
        
        <div class="form-floating mb-3">
            <InputText class="form-control" placeholder="IMO" @bind-Value="VesselModel.Imo"/>
            <label>IMO</label>
        </div>
    </div>

    <hr style="background-color: black;"/>

    <div class="mx-auto text-center">
        <button type="submit" class="btn btn-primary w-50 my-2">
            <i class="bi bi-check-circle"></i>
            Confirm
        </button>

        <button type="button" class="btn btn-danger w-50" @onclick="ModalInstance.CancelAsync">
            <i class="bi bi-x-circle"></i>
            Cancel
        </button>
    </div>
</EditForm>