<div class="container" style="width: 40rem;">
    <hr style="background-color: black; margin-top: 0;"/>

    <div class="row my-1">
        <div class="col d-flex mt-1">
            <RadzenIcon Icon="fingerprint"/>
            <h5 class="fw-bold mx-2">MMSI</h5>
        </div>

        <div class="col">
            <button type="button" class="btn btn-link p-0 text-decoration-none fs-5" @onclick="() => ShowVesselDetailsModalAsync(EventModel.Mmsi)">@EventModel.Mmsi</button>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex">
            <RadzenIcon Icon="my_location"/>
            <h5 class="fw-bold mx-2">Latitude</h5>
        </div>

        <div class="col">
            <h5>@EventModel.Latitude</h5>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex">
            <RadzenIcon Icon="my_location"/>
            <h5 class="fw-bold mx-2">Longitude</h5>
        </div>

        <div class="col">
            <h5>@EventModel.Longitude</h5>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex">
            <RadzenIcon Icon="schedule"/>
            <h5 class="fw-bold mx-2">Start timestamp</h5>
        </div>

        <div class="col">
            <h5>@EventModel.StartTimestamp.ToString("yyyy MMMM dd hh:mm:ss tt")</h5>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex">
            <RadzenIcon Icon="schedule"/>
            <h5 class="fw-bold mx-2">End timestamp</h5>
        </div>

        <div class="col">
            <h5>@EventModel.EndTimestamp.ToString("yyyy MMMM dd hh:mm:ss tt")</h5>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex">
            <RadzenIcon Icon="speed"/>
            <h5 class="fw-bold mx-2">Median speed in knots</h5>
        </div>

        <div class="col">
            <h5>@EventModel.MedianSpeedKnots</h5>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex">
            <RadzenIcon Icon="av_timer"/>
            <h5 class="fw-bold mx-2">Total duration in hours</h5>
        </div>

        <div class="col">
            <h5>
                @TimeSpan.FromHours(EventModel.TotalDurationHours).Hours hrs @TimeSpan.FromHours(EventModel.TotalDurationHours).Minutes min @TimeSpan.FromHours(EventModel.TotalDurationHours).Seconds sec
            </h5>

            @* <h5>@EventModel.TotalDurationHours</h5> *@
        </div>
    </div>

    <div class="row">
        <div class="col d-flex">
            <RadzenIcon Icon="local_police"/>
            <h5 class="fw-bold mx-2">Is event illegal</h5>
        </div>

        <div class="col">
            <h5>@(EventModel.IsIllegal ? "Yes" : "No") - Illegal probability: @(Math.Round(EventModel.IllegalEventProbability, 2))%</h5>
        </div>
    </div>
</div>

<hr style="background-color: black; margin-top: 0;"/>

@if (!EventModel.IsDismissed)
{
    <div class="d-flex justify-content-center mb-3">
        <button class="btn btn-primary w-50" @onclick="HandleDismissEventAsync">
            <i class="bi bi-check2-square"></i> Dismiss
        </button>
    </div>

    <hr style="background-color: black; margin-top: 0;"/>
}

<div class="d-flex justify-content-center">
    <button class="btn btn-danger w-25" @onclick="ModalInstance.CancelAsync">
        <i class="bi bi-x-circle"></i> Close
    </button>
</div>